  <%= form_for(@user, url: "#{@user.id}", html: { method: 'PUT', class: 'form-horizontal' }) do |f| %>

  <div class="col-md-6">

	  <div class="form-group">
      <%= f.label :aadhar_number, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
        <%= f.text_field :aadhar_number, autofocus: true, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :dob, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
        <%= f.date_select :dob, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
        <%= f.text_area :address, rows:8, class: 'form-control', placeholder: '10 digits' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-6">
        <%= f.submit "Update  Profile", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<%end%>